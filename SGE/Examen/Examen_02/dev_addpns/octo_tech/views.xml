<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="octo_tech.castellon_list">
      <field name="name">Castellon</field>
      <field name="model">octo_tech.castellon</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="direccion" />
          <field name="jefe" />
          <field name="proyecto" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="octo_tech.proyecto_list">
      <field name="name">Proyecto</field>
      <field name="model">octo_tech.proyecto</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="descripcion" />
          <field name="fecha_creacion" />
          <field name="trabajador" />
          <field name="sedeCastellon" />
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="octo_tech.trabajador_list">
      <field name="name">Trabajador</field>
      <field name="model">octo_tech.trabajador</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="apellidos" />
          <field name="fecha_antiguedad" />
          <field name="sueldo" />
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="octo_tech.action_castellon_window">
      <field name="name">Castellón</field>
      <field name="res_model">octo_tech.castellon</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="octo_tech.action_castellon_window">
      <field name="name">Información de Castellón</field>
      <field name="res_model">octo_tech.castellon</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="octo_tech.action_proyecto_window">
      <field name="name">Proyectos de Castellón</field>
      <field name="res_model">octo_tech.proyecto</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="octo_tech.action_trabajador_window">
      <field name="name">Trabajadores de Castellón</field>
      <field name="res_model">octo_tech.trabajador</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="octo_tech.action_server">
      <field name="name">OctoTech server</field>
      <field name="model_id" ref="model_octo_tech_octo_tech"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="OctoTech" id="octo_tech.menu_root" />

    <!-- menu categories -->

    <menuitem name="Castellón" id="octo_tech.menu_1" parent="octo_tech.menu_root" />

    <!-- actions -->

    <menuitem name="Información" id="octo_tech.menu_1_list_castellon" parent="octo_tech.menu_1"
      action="octo_tech.action_castellon_window" />

    <menuitem name="Proyecto" id="octo_tech.menu_1_list_proyecto" parent="octo_tech.menu_1"
      action="octo_tech.action_proyecto_window" />

    <menuitem name="Trabajador" id="octo_tech.menu_1_list_trabajador" parent="octo_tech.menu_1"
      action="octo_tech.action_trabajador_window" />

  </data>
</odoo>