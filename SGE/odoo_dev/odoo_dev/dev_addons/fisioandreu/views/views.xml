    <!-- Top menu item -->

    <menuitem name="Fisio" id="fisioandreu.menu_root" />

    <!-- menu categories -->

    <menuitem name="Opciones" id="fisioandreu.menu_1" parent="fisioandreu.menu_root"/>
    <!-- <menuitem name="Recomendaciones" id="fisioandreu.menu_2" parent="fisioandreu.menu_root" /> -->
    <!-- <menuitem name="Menu 2" id="fisioandreu.menu_2" parent="fisioandreu.menu_root"/> -->

    <!-- actions -->

    <menuitem name="Pacientes" id="fisioandreu.menu_1_paciente_list" parent="fisioandreu.menu_1"
              action="fisioandreu.action_paciente_window"/>
    
    <menuitem name="Recomendaciones" id="fisioandreu.menu_1_recomendacion_list" parent="fisioandreu.menu_1"
      action="fisioandreu.action_recomendacion_window" />
