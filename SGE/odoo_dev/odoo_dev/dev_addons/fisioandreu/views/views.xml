<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="fisioandreu.palist">
      <field name="name">Pacientes</field>
      <field name="model">fisioandreu.pacientes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="apellidos"/>
          <field name="edad" />
          <field name="recomendaciones" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fisioandreu.list">
      <field name="name">Recomendaciones</field>
      <field name="model">fisioandreu.recomendaciones</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="fisioandreu.action_paciente_window">
      <field name="name">Pacientes</field>
      <field name="res_model">fisioandreu.pacientes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="fisioandreu.action_recomendacion_window">
      <field name="name">Recomendaciones</field>
      <field name="res_model">fisioandreu.recomendaciones</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
