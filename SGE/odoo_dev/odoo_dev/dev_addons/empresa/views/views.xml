<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="empresa.incidencia">
      <field name="name">Incidencias</field>
      <field name="model">empresa.incidencias</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="departamento"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empresa.departamento">
      <field name="name">Departamentos</field>
      <field name="model">empresa.departamentos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="empresa.action_incidencia_window">
      <field name="name">Incidencias</field>
      <field name="res_model">empresa.incidencias</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="empresa.action_departamento_window">
      <field name="name">Departamentos</field>
      <field name="res_model">empresa.departamentos</field>
      <field name="view_mode">tree,form</field>
    </record>


