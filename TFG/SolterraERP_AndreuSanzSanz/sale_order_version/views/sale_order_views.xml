<odoo>
  <record id="view_order_form_with_version" model="ir.ui.view">
    <field name="name">sale.order.form.with.version</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">
      <header>
        <button name="action_create_version" string="Create Version" type="object"
          class="oe_highlight" />
      </header>
      <notebook position="inside">
        <page string="Versions">
          <field name="version_ids" context="{'default_sale_order_id': active_id}"
            widget="one2many_list">
            <tree>
              <field name="name" />
              <field name="date_version" />
            </tree>
          </field>
        </page>
      </notebook>
    </field>
  </record>
</odoo>