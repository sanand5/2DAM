
<odoo>
  <data>
    <record id="view_product_template_form_inherit_inventory" model="ir.ui.view">
      <field name="name">product.template.inventory.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <xpath
          expr="//page[@name='inventory']/group[@name='inventory']"
          position="inside">
            <group string="Campos Adicionales">
              <field name="codigo_fabricante"/>
              <field name="codigo_proveedor" />
              <field name="alto" />
              <field name="ancho"/> 
            </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>



